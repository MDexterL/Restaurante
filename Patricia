-- Criação do banco de dados
CREATE DATABASE restaurante;

-- Utilizando o banco de dados criado
USE restaurante;

-- Criação das tabelas

-- Criar tabela Unidades
CREATE TABLE Unidades (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    localizacao VARCHAR(255) NOT NULL
);

-- Criar tabela Funcionários
CREATE TABLE Funcionarios (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    cargo VARCHAR(100) NOT NULL,
    unidade_id INT,
    FOREIGN KEY (unidade_id) REFERENCES Unidades(id) ON DELETE CASCADE
);

-- Inserir dados na tabela Unidades
INSERT INTO Unidades (nome, localizacao) VALUES
('Unidade A', 'Rua 1, Bairro A'),
('Unidade B', 'Rua 2, Bairro B');

-- Inserir dados na tabela Funcionários
INSERT INTO Funcionarios (nome, cargo, unidade_id) VALUES
('João Silva', 'Gerente', 1),
('Maria Oliveira', 'Assistente', 1),
('Carlos Pereira', 'Analista', 2);

CREATE TABLE Clientes (
    ClienteID INT PRIMARY KEY AUTO_INCREMENT,
    Nome VARCHAR(100) NOT NULL,
    Telefone VARCHAR(15),
    Email VARCHAR(100)
);

CREATE TABLE Cardapio (
    ItemID INT PRIMARY KEY AUTO_INCREMENT,
    Nome VARCHAR(100) NOT NULL,
    Descricao TEXT,
    Preco DECIMAL(10, 2)
);

CREATE TABLE Pedidos (
    PedidoID INT PRIMARY KEY AUTO_INCREMENT,
    UnidadeID INT,
    FuncionarioID INT,
    ClienteID INT,
    DataPedido DATETIME NOT NULL,
    Total DECIMAL(10, 2),
    FOREIGN KEY (UnidadeID) REFERENCES Unidades(UnidadeID),
    FOREIGN KEY (FuncionarioID) REFERENCES Funcionarios(FuncionarioID),
    FOREIGN KEY (ClienteID) REFERENCES Clientes(ClienteID)
);

CREATE TABLE DetalhesPedido (
    DetalheID INT PRIMARY KEY AUTO_INCREMENT,
    PedidoID INT,
    ItemID INT,
    Quantidade INT,
    PrecoUnitario DECIMAL(10, 2),
    FOREIGN KEY (PedidoID) REFERENCES Pedidos(PedidoID),
    FOREIGN KEY (ItemID) REFERENCES Cardapio(ItemID)
);

